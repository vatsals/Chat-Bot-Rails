<%= form_for @ping do |f| %>
  <p>
    <%= f.label :to %><br />
    <%= f.text_field :to %><br />
  </p>
  <p class="hidden">
    <%= f.label :from %><br />
    <%= f.text_field :from, :value => current_user.email %><br />
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message %><br />
  </p>
  <p>
    <%= f.submit "Send Message" %><br />
  </p>
<% end %>

<div class="other-links">
  <a href="/pings">Go back</a>
</div>